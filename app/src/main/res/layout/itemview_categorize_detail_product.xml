<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:background="@drawable/comment_product_bg"
    android:orientation="vertical"
    android:padding="2dip">


    <android.support.v7.widget.CardView
        android:id="@+id/categorize_detail_product_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/categorize_detail_product_img"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/categorize_detail_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/font_light"
                android:textSize="@dimen/text_size_20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/categorize_detail_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="2dip"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="￥3900"
                        android:textColor="@color/textColor_red"
                        android:textSize="@dimen/text_size_18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/categorize_phone_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/product_detail_bg"
                        android:padding="5dip"
                        android:text="二手良品"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13sp" />


                    <TextView
                        android:id="@+id/categorize_phone_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/product_detail_bg"
                        android:padding="5dip"
                        android:text="深灰色"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13sp" />


                    <TextView
                        android:id="@+id/categorize_phone_stroage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/product_detail_bg"
                        android:padding="5dip"
                        android:text="16G"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13sp" />


                    <TextView
                        android:id="@+id/categorize_phone_carrieroperator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/product_detail_bg"
                        android:padding="5dip"
                        android:text="移动4G"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>